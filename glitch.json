{
  "install": "python3 narflinger.py && npm install",
  "start": "npm run start",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "exclude": [
        "^public/",
        "^dist/"
      ],
      "include": [
        "^\\.env$",
        "\\.js$",
        "\\.json$"
      ]
    },
    "throttle": 500
  }
}
